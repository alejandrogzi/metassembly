/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    alejandrogz/metassembly Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default config options for all compute environments
----------------------------------------------------------------------------------------
*/

cleanup = true

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    DEFAULT PARAMETER VALUES
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

// Global default params, used in configs
params {

    // Main input options
    input_dir       =  ''         // input directory containing fastq files
    fasta           =  ''         // path to genome fasta file
    env             =  null       // path to environment dir

    // Working directory
    workDir         =  '${params.input_dir}/work'

    // Linting
    fq_skip_linting_at_start         = false                      // skip linting
    fq_skip_linting_after_trimming   = false                      // skip linting after trimming
    fq_skip_linting_after_deacon     = false                      // skip linting after trimming
    fq_extra_args                    = '--disable-validator P001' // forces same name for pair

    // Trimming
    fastp_allow_gap_overlap_trimming    = true  // --allow_gap_overlap_trimming
    fastp_allow_correction              = true  // --correction
    fastp_discard_trimmed_pass          = false // --discard_trimmed_pass
    fastp_save_trimmed_fail             = false // --save_trimmed_fail
    fastp_save_merged                   = false // --save_merged
    fastp_min_trimmed_reads             = 10000 // --min_trimmed_reads
    fastp_deduplicate_reads             = true  // --deduplicate_reads
    fastp_deduplication_accuracy        = 3     // --deduplication_accuracy

    // Decontamination
    deacon_index_path                           = null   // path to deacon index
    deacon_download_index                       = false  // download deacon index
    deacon_make_single_index                    = false  // make single deacon index
    deacon_multi_index_additional_genome_paths  = null   // additional genome paths
    deacon_keep_fastp_fastq                     = false  // keep fastp fastq

    // Alignment
    star_index_path                           = null       // path to STAR index
    star_gtf_path                             = null       // path to gtf
    star_ignore_gtf_for_index                 = false      // ignores gtf for index
    star_ignore_gtf_for_mapping               = true       // ignores gtf for mapping
    star_seq_center                           = "custom"   // sequencing center
    star_seq_platform                         = "illumina" // sequencing platform
    star_seq_library                          = "default"  // sequencing library
    star_machine_type                         = "default"  // sequencing machine
    star_min_mapped_reads                     = 5          // min mapped reads
    star_extra_align_args                     = null       // extra arguments for STAR
    star_save_unaligned                       = false      // saves unaligned reads
    star_keep_first_pass_bam                  = false      // keep first pass bam
    star_delete_fastq_after_alignment         = true       // delete fastq after second pass

    // Junctions
    junction_min_read_coverage     = 2          // min read support for junction
    junction_min_junction_length   = 50         // min junction length

    // Assembly
    aletsch_keep_bam                  = false      // keep bam
    beaver_keep_aletsch_gtf           = false      // keep aletsch gtf

    // MultiQC options
    skip_multiqc                = false        // skip multiqc
    multiqc_config              = null         // multiqc config file
    multiqc_title               = null         // multiqc title
    multiqc_logo                = null         // multiqc logo
    max_multiqc_email_size      = '25.MB'      // max multiqc email filesize
    multiqc_methods_description = null         // multiqc methods description

    // Mailing options
    sent_email                  = true               // decides to send email or not
    smtp_server                  = 'smtp.gmail.com'  // smtp server [default: smtp.gmail.com]
    smtp_port                    = 465               // smtp port [default: 465]
    smtp_user                    = null              // smtp user [sender]
    smtp_password                = null              // smtp password [sender]
    smtp_security                = 'ssl'            // smtp security [none, tls, ssl]
    email_to                     = null              // recipient email address
    email_on_fail                = null              // email_on_fail
    plaintext_email              = false             // plaintext_email
    interactive                  = false             // interactive
    use_mailx                    = false             // use_mailx instead smtp

    // Boilerplate options
    outdir                       = null     // output directory
    publish_dir_mode             = 'copy'   // publish_dir_mode
    publish_all                  = false    // publish all
    help                         = false    // help
    help_full                    = false    // help_full
    show_hidden                  = false    // show_hidden
    version                      = false    // version
    trace_report_suffix          = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')  // Config options

    // Config options
    config_profile_name        = null
    config_profile_description = null

}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    EXTENDING PROCESS DEFINITIONS AND ARGUMENTS
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

// Overwriting conda path for selected processes [except beaver]
process {
    if ( params.env ) {
        withName: '.*:PREPROCESS_READS:.*' {
            conda = params.env
        }
        withName: '.*:STAR_ALIGNMENT:.*' {
            conda = params.env
        }
        withName: '.*:ALETSCH' {
            conda = params.env
        }
        withName: '.*:MULTIQC' {
            conda = params.env
        }
        withName: '.*:EMAIL_RESULTS' {
            conda = params.env
        }
    }
}

// Default publishing logic for pipeline
if ( params.publish_all ) {
    process {
        publishDir = [
            path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}


// Add params to fastp process
process {
    withName: '.*:FASTP' {
        ext.args = { [
            params.fastp_allow_gap_overlap_trimming ? '--allow_gap_overlap_trimming' : '',
            params.fastp_allow_correction ? '--correction' : '',
            params.fastp_deduplicate_reads ? '--dedup' : '',
            params.fastp_deduplication_accuracy ? "--dup_calc_accuracy ${params.fastp_deduplication_accuracy}" : ''
        ].findAll { it != '' }.join(' ').trim() }
        ext.prefix = { "${meta.id}" }
    }
}

// Add params to wget deacon index process
process {
    withName: 'WGET_DEACON_INDEX' {
        ext.suffix = { "idx" }
        publishDir = [
            path: { "${params.outdir}/wget/deacon_index" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'DEACON_FILTER' {
        ext.prefix = { "${meta.id}" }
        publishDir = [
             path: { "${params.outdir}/deacon_filter" },
             mode: params.publish_dir_mode,
             saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}

// Add params to STAR process
process {
    withName: '.*:STAR_ALIGN_1PASS' {
        ext.when = true
        ext.args   = {
            def extra_args = params.star_extra_align_args ?: ''
            // Standard STAR-2pass pipeline configuration!
            def base_args = """
                --readFilesCommand zcat
            """.trim()

            return base_args += " " + extra_args
        }
        ext.prefix = { "${meta.id}" }
    }
}

// Add params to STAR 2pass process
process {
    withName: '.*:STAR_ALIGN_2PASS' {
        ext.when = true
        ext.args   = {
            def extra_args = params.star_extra_align_args ?: ''
            // Standard STAR-2pass pipeline configuration!
            def base_args = [
                '--outSAMtype BAM SortedByCoordinate',
                '--outSAMattributes NH HI AS nM NM MD ch',
                '--readFilesCommand zcat',
                '--outSAMstrandField intronMotif',
                '--outSAMunmapped None',
                '--outFilterMultimapNmax 20',
                '--alignSJDBoverhangMin 1',
                '--peOverlapNbasesMin 5'
            ]

            return (base_args + extra_args.split(' ')).join(' ')
        }
        ext.prefix = { "${meta.id}" }
        publishDir = [
            path: { "${params.outdir}/star_2pass" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}

// Add params to MultiQC process
process {
    withName: 'MULTIQC' {
        ext.args = { "--flat" }
        publishDir = [
            path: { "${params.outdir}/multiqc" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}

// Overwriting publish mode for beaver
process {
    withName: '.*:BEAVER' {
        publishDir = [
            path: { "${params.outdir}/beaver" },
            mode: 'copy',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}

// Overwriting publish mode for novel junctions
process {
    withName: '.*:JOIN_JUNCTIONS' {
        publishDir = [
            path: { "${params.outdir}/junctions" },
            mode: 'copy',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    EXECUTOR CONFIG
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

profiles {
    slurm {
        process {
            executor        = 'slurm'
            queue           = 'batch'
        }

        executor {
            clusterOptions  = null
            queueSize       = 500
            array           = null
            penv            = null
        }
    }

    local {
        process {
            executor = 'local'
        }
    }
}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    PROFILES CONFIG
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

profiles {
    debug {
        dumpHashes              = true
        process.beforeScript    = 'echo $HOSTNAME'
        cleanup                 = false
        nextflow.enable.configProcessNamesValidation = true
    }
    conda {
        conda.enabled           = true
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        conda.channels          = ['conda-forge', 'bioconda']
        apptainer.enabled       = false
    }
    mamba {
        conda.enabled           = true
        conda.useMamba          = true
        conda.channels          = ['conda-forge', 'bioconda']
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    docker {
        docker.enabled          = true
        conda.enabled           = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
        docker.runOptions       = '-u $(id -u):$(id -g)'
    }
    arm {
        docker.runOptions       = '-u $(id -u):$(id -g) --platform=linux/amd64'
        includeConfig 'conf/arm.config'
    }
    singularity {
        singularity.enabled     = true
        singularity.autoMounts  = true
        conda.enabled           = false
        docker.enabled          = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    podman {
        podman.enabled          = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    shifter {
        shifter.enabled         = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    charliecloud {
        charliecloud.enabled    = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        apptainer.enabled       = false
    }
    apptainer {
        apptainer.enabled       = true
        apptainer.autoMounts    = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
    }
    wave {
        apptainer.ociAutoPull   = true
        singularity.ociAutoPull = true
        wave.enabled            = true
        wave.freeze             = true
        wave.strategy           = 'conda,container'
    }
    gitpod {
        executor.name           = 'local'
        executor.cpus           = 4
        executor.memory         = 8.GB
        process {
            resourceLimits = [
                memory: 8.GB,
                cpus  : 4,
                time  : 1.h
            ]
        }
    }
    gpu {
        docker.runOptions       = '-u $(id -u):$(id -g) --gpus all'
        apptainer.runOptions    = '--nv'
        singularity.runOptions  = '--nv'
    }
}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    PROCESS LABELS;
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

process {

    cpus   = { 1      * task.attempt }
    memory = { 6.GB   * task.attempt }
    time   = { 4.h    * task.attempt }

    errorStrategy = { task.exitStatus in ((130..145) + 104 + 175) ? 'retry' : 'finish' }
    maxRetries    = 1
    maxErrors     = '-1'

    // Single processes
    withLabel:process_single {
        cpus   = { 1                   }
        memory = { 6.GB * task.attempt }
        time   = { 4.h  * task.attempt }
    }

    // Low memory processes
    withLabel:process_low {
        cpus   = { 2     * task.attempt }
        memory = { 12.GB * task.attempt }
        time   = { 4.h   * task.attempt }
    }
    withLabel:custom_process_low {
        cpus   = { 4     * task.attempt }
        memory = { 10.GB * task.attempt }
        time   = { 4.h   * task.attempt }
    }

    // Medium memory processes
    withLabel:process_medium {
        cpus   = { 6     * task.attempt }
        memory = { 36.GB * task.attempt }
        time   = { 8.h   * task.attempt }
    }
    withLabel:custom_process_medium {
        cpus   = { 6     * task.attempt }
        memory = { 64.GB * task.attempt }
        time   = { 12.h   * task.attempt }
    }

    // High memory processes
    withLabel:process_high {
        cpus   = { 12    * task.attempt }
        memory = { 72.GB * task.attempt }
        time   = { 16.h  * task.attempt }
    }
    withLabel:process_high_memory {
        memory = { 200.GB * task.attempt }
    }

    // Long running processes
    withLabel:process_long {
        time   = { 20.h  * task.attempt }
    }

    // Strategies
    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }
    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 2
    }

    // GPU
    withLabel: process_gpu {
        ext.use_gpu = { workflow.profile.contains('gpu') }
        accelerator = { workflow.profile.contains('gpu') ? 1 : null }
    }
}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    REGISTRY CONFIG
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

// Set default registry for Apptainer, Docker, Podman, Charliecloud and Singularity independent of -profile
// Will not be used unless Apptainer / Docker / Podman / Charliecloud / Singularity are enabled
// Set to your registry if you have a mirror of containers
apptainer.registry    = 'quay.io'
docker.registry       = 'quay.io'
podman.registry       = 'quay.io'
singularity.registry  = 'quay.io'
charliecloud.registry = 'quay.io'

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    ENVIRONMENT CONFIG
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

// Export these variables to prevent local Python/R libraries from conflicting with those in the container
// The JULIA depot path has been adjusted to a fixed path `/usr/local/share/julia` that needs to be used for packages in the container.
// See https://apeltzer.github.io/post/03-julia-lang-nextflow/ for details on that. Once we have a common agreement on where to keep Julia packages, this is adjustable.

env {
    PYTHONNOUSERSITE = 1
    R_PROFILE_USER   = "/.Rprofile"
    R_ENVIRON_USER   = "/.Renviron"
    JULIA_DEPOT_PATH = "/usr/local/share/julia"
}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    BASH OPTIONS
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

// Set bash options
process.shell = [
    "bash",
    "-C",         // No clobber - prevent output redirection from overwriting files.
    "-e",         // Exit if a tool returns a non-zero status/exit code
    "-u",         // Treat unset variables and parameters as an error
    "-o",         // Returns the status of the last command to exit..
    "pipefail"    //   ..with a non-zero status or zero if all successfully execute
]


/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    REPORT PARAMETER VALUES
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

// Disable process selector warnings by default. Use debug profile to enable warnings.
nextflow.enable.configProcessNamesValidation = false

timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline_${params.trace_report_suffix}.html"
}
report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report_${params.trace_report_suffix}.html"
}
trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace_${params.trace_report_suffix}.txt"
}
dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag_${params.trace_report_suffix}.html"
}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    MANIFEST
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/


manifest {
    name            = 'alejandrogzi/metassembly'
    homePage        = 'https://github.com/alejandrogzi/metassembly'
    description     = """Bulk RNA-seq analysis pipeline for transcript discovery"""
    mainScript      = 'main.nf'
    defaultBranch   = 'master'
    nextflowVersion = '!>=24.10.5'
    version         = '0.0.9'
}

validation {
    help {
        enabled = true
        command = "nextflow run main.nf -profile <docker/singularity/.../institute>"
        fullParameter = "help_full"
        showHiddenParameter = "show_hidden"
    }
}
